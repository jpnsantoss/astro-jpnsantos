---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource-variable/inter";
import { Image } from "astro:assets";

import profilePicture from "../images/profile.jpeg";
import Button from "../components/Button.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="grid lg:grid-cols-3 gap-y-8 lg:gap-24 container py-16 px-4 bg-background text-foreground"
  >
    <header class="space-y-8">
      <div class="space-y-4">
        <Image
          src={profilePicture}
          alt="Profile Picture"
          width="150"
          height="150"
          class="rounded-full"
        />
        <div class="space-y-2">
          <h1 class="font-bold text-4xl">Jo√£o Santos</h1>
          <h2 class="text-xl">Full-stack web developer</h2>
        </div>
        <h3 class="text-lg">üìç Porto, Portugal</h3>
        <p class="text-sm">
          My passion is to build not only beautiful, but also functional
          websites and applications.
        </p>
      </div>
      <ul>
        <Button href="cv.pdf" target="_blank" style="primary">Resume</Button>
      </ul>
    </header>
    <main class="col-span-2">
      <slot />
    </main>
  </body>
</html>
