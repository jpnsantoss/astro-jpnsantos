---
import { getEducation } from "../../utils/sanity";

const educationList = await getEducation();
---

<section class="space-y-8 pb-16">
  <h2 class="text-4xl font-bold text-primary">Education</h2>
  <div class="space-y-6">
    {
      educationList.map((education) => (
        <div class="bg-muted rounded-card p-6 flex flex-col md:flex-row items-start md:space-x-4">
          <img
            src={education.institution.logo}
            alt={education.institution.name}
            class="w-20 h-20 rounded-full object-cover"
          />
          <div class="flex-1">
            <h3 class="text-2xl text-primary font-semibold">
              {education.title}
            </h3>
            <div class="flex md:gap-2 flex-col md:flex-row md:items-center">
              <p class="text-lg text-foreground">
                {education.institution.name}
              </p>
              <span class="hidden md:block">Â·</span>
              <p class="md:text-sm text-muted-foreground">
                {education.location}
              </p>
            </div>
            <p class="text-sm text-muted-foreground">
              {education.startDate} - {education.endDate}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>
