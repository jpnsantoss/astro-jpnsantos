---
import { fetchGitHubRepos, fetchRepoReadme } from "../../utils/githubApi";

const username = "jpnsantoss";
const topic = "portfolio";

const repos = await fetchGitHubRepos(username, topic);
---

<section class="space-y-8 pb-16">
  <h2 class="text-4xl font-bold text-primary">Projects</h2>
  <div class="space-y-6">
    {
      repos.length > 0 ? (
        repos.map((repo: any) => (
          <div class="bg-muted rounded-card p-6 flex items-center justify-between space-x-4">
            <h3 class="text-2xl font-semibold text-primary">{repo.name}</h3>
            <p class="text-lg">{repo.description}</p>
            <a
              href={repo.html_url}
              class="text-primary hover:underline"
              target="_blank"
            >
              View on GitHub
            </a>
          </div>
        ))
      ) : (
        <p>Loading...</p>
      )
    }
  </div>
</section>
