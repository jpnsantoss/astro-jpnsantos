---
import { getExperience } from "../../utils/sanity";

const experiences = await getExperience();
---

<section class="space-y-8 pb-16">
  <h2 class="text-4xl font-bold text-primary">Experience</h2>
  <div class="space-y-6">
    {
      experiences.map((experience) => (
        <div class="bg-muted rounded-card p-6 flex items-start space-x-4">
          <img
            src={experience.company.logo}
            alt={experience.company.name}
            class="w-20 h-20 rounded-full object-cover"
          />
          <div class="flex-1">
            <h3 class="text-2xl text-primary font-semibold">
              {experience.title}
            </h3>
            <div class="flex gap-2 items-center">
              <p class="text-lg text-foreground">{experience.company.name}</p>
              <span>Â·</span>
              <p class="text-sm text-muted-foreground">{experience.location}</p>
            </div>
            <p class="text-sm text-muted-foreground">
              {experience.startDate} - {experience.endDate}
            </p>
            <p class="mt-4 text-gray-700">{experience.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
