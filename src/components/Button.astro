---
interface Props {
  href: string;
  target?: "_blank" | "_self";
  style?: "primary" | "secondary";
  size?: "sm" | "md" | "lg" | "icon";
}

const { href, target = "_self", style = "primary", size = "md" } = Astro.props;
const rel = target === "_blank" ? "noopener noreferrer" : "";

const styleClasses = {
  primary: "bg-primary text-background",
  secondary: "bg-background text-primary border-2 border-primary",
};

const sizeClasses = {
  sm: "text-sm py-2 px-3",
  md: "text-base py-3 px-6 font-semibold",
  lg: "text-lg py-4 px-8 font-semibold",
  icon: "p-2",
};
---

<a
  href={href}
  target={target}
  rel={rel}
  class={`flex items-center gap-2 rounded-full ${style == "primary" ? "hover:bg-foreground" : "hover:bg-muted"} transition-colors ${styleClasses[style]} ${sizeClasses[size]}`}
>
  <slot />
</a>
